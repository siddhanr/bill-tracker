<% include partials/header %>
<div class="container">
	<h1>Monthly Bills</h1>
	<button type="button" class="btn btn-default" data-toggle="modal" data-target="#addBillModal"> 
		Add New Bill
	</button>
	<div id="addBillModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
         			 <h4 class="modal-title">Add New Bill</h4>
				</div>
				<div class="modal-body">
					<form method="POST" action="/bills/add" class="">
						<div class="form-group">
							<label>Name</label><br>
							<input type="text" class="form-control" name="name"><br>
						</div>
						<div class="form-group">
							<label>Amount</label><br>
							<input type="money" class="form-control" name="amount"><br>
						</div>
						<input type="submit" class="btn btn-warning" value="Submit">
					</form>
				</div>
			</div>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Amount</th>
				<th></th>
			</tr>
		</thead>
		<tbody class="bill-table">
			
		</tbody>
	</table>
	<h4 class="total"></h1>
</div>
<% include partials/footer %>
